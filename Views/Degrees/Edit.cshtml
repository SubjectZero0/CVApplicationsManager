@model CVApplicationsManager.Views.EditDegreeViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="DegreeName" class="control-label m-2"></label>
                <input asp-for="DegreeName" class="form-control m-2" />
                <span asp-validation-for="DegreeName" class="text-danger"></span>
            </div>
            <div class="form-group m-2">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">...Back to Degrees</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
